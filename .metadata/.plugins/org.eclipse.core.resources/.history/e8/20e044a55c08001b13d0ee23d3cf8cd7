<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<%
	int menu = 1; //menu parameter 없으면 1 page 기본동작
	String menu_param = request.getParameter("menu");
	
	if (menu_param != null) {
		menu = Integer.parseInt(menu_param);
	}
	
	//1 <= menu <= 4
	if (menu > 4) menu = 4;
	if (menu < 1) menu = 1;
%>

<!-- left 사이트 메뉴 시작 -->
